Количество дней в месяце

#include <iostream> 

int main() 
{ 
    int fourDigitYear, monthNumber; 

    std::cin >> monthNumber >> fourDigitYear; 

    switch (monthNumber) { 
        case 1:
        case 3: 
        case 5:
        case 7:
        case 8:
        case 10:
        case 12:
            std::cout << 31; 
            break; 
        case 4:
        case 6: 
        case 9:
        case 11:
            std::cout << 30; 
            break; 
        case 2:
           if ((fourDigitYear % 400 == 0) || (fourDigitYear % 4 == 0 && fourDigitYear % 100 != 0)) {
               std::cout << 29;
           } else {
               std::cout << 28;
           }
            break; 
    }
}
